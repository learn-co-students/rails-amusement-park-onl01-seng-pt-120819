
<h1><%= @attraction.name %></h1>




<% if @user.admin == true %>
<button class="btn btn-success">
  <%= link_to 'Edit Attraction', edit_attraction_path(@attraction) %>
  </button>
<% else %>
    <%= form_for @ride do |f|%>
    
    <%= f.hidden_field :user_id %>
    <%= f.hidden_field :attraction_id %>
    <%= f.submit  "Go on this ride" %>
    <%end%>

<% end %>

